<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pager_background">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/player_toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.andrew.apollo.widgets.theme.Colorstrip
        android:id="@+id/colorstrip"
        android:layout_width="0dp"
        android:layout_height="@dimen/colorstrip_height"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/player_toolbar"
        app:layout_constraintBottom_toTopOf="@id/audio_player_artist_name"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/audio_player_artist_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@color/audio_player_line_one"
        android:textSize="@dimen/text_size_medium"
        android:layout_marginLeft="@dimen/audio_player_header_margin"
        android:layout_marginStart="@dimen/audio_player_header_margin"
        android:layout_marginTop="@dimen/audio_player_header_margin"
        android:layout_marginRight="@dimen/audio_player_header_margin"
        android:layout_marginEnd="@dimen/audio_player_header_margin"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/colorstrip"
        app:layout_constraintBottom_toTopOf="@id/audio_player_track_name"
        app:layout_constraintEnd_toStartOf="@id/audio_player_switch_queue" />

    <TextView
        android:id="@+id/audio_player_track_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@color/audio_player_line_one"
        android:textSize="@dimen/text_size_medium"
        android:textStyle="bold"
        android:layout_marginLeft="@dimen/audio_player_header_margin"
        android:layout_marginStart="@dimen/audio_player_header_margin"
        android:layout_marginBottom="@dimen/audio_player_header_margin"
        android:layout_marginRight="@dimen/audio_player_header_margin"
        android:layout_marginEnd="@dimen/audio_player_header_margin"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/audio_player_artist_name"
        app:layout_constraintBottom_toTopOf="@id/audio_player_pager"
        app:layout_constraintEnd_toStartOf="@id/audio_player_switch_queue" />

    <ImageView
        android:id="@+id/audio_player_switch_queue"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_marginEnd="@dimen/audio_player_header_margin"
        android:layout_marginRight="@dimen/audio_player_header_margin"
        app:layout_constraintTop_toTopOf="@id/audio_player_artist_name"
        app:layout_constraintBottom_toBottomOf="@id/audio_player_track_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintDimensionRatio="1.0" />

    <ImageView
        android:id="@+id/audio_player_switch_album_art"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="@id/audio_player_switch_queue"
        app:layout_constraintTop_toTopOf="@id/audio_player_switch_queue"
        app:layout_constraintBottom_toBottomOf="@id/audio_player_switch_queue"
        app:layout_constraintEnd_toEndOf="@id/audio_player_switch_queue"
        app:layout_constraintDimensionRatio="1.0" />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/audio_player_pager"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/audio_player_track_name"
        app:layout_constraintBottom_toTopOf="@id/player_progress"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/audio_player_album_art"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/audio_player_pager"
        app:layout_constraintBottom_toBottomOf="@id/audio_player_pager"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintDimensionRatio="1.0" />

    <ImageView
        android:id="@+id/audio_player_album_border"
        android:layout_width="0dp"
        android:layout_height="@dimen/shadow_height"
        android:src="@drawable/top_shadow"
        app:layout_constraintStart_toStartOf="@id/audio_player_album_art"
        app:layout_constraintTop_toTopOf="@id/audio_player_album_art"
        app:layout_constraintEnd_toEndOf="@id/audio_player_album_art" />

    <ImageView
        android:id="@+id/audio_player_album_border_bottom"
        android:layout_width="0dp"
        android:layout_height="@dimen/shadow_height"
        android:src="@drawable/bottom_shadow"
        app:layout_constraintStart_toStartOf="@id/audio_player_album_art"
        app:layout_constraintBottom_toBottomOf="@id/audio_player_album_art"
        app:layout_constraintEnd_toEndOf="@id/audio_player_album_art" />

    <TextView
        android:id="@+id/audio_player_current_time"
        android:layout_width="@dimen/audio_player_time_width"
        android:layout_height="@dimen/audioplayer_seekbar_height"
        android:gravity="center"
        android:textColor="@color/audio_player_current_time"
        android:textSize="@dimen/text_size_micro"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/player_progress"
        app:layout_constraintBottom_toBottomOf="@id/player_progress"
        app:layout_constraintEnd_toStartOf="@id/player_progress" />

    <SeekBar
        android:id="@+id/player_progress"
        android:layout_width="0dp"
        android:layout_height="@dimen/audioplayer_seekbar_height"
        android:layout_marginBottom="@dimen/audio_player_seek_bar_margin_bottom"
        android:max="1000"
        android:thumb="@null"
        app:layout_constraintStart_toEndOf="@id/audio_player_current_time"
        app:layout_constraintBottom_toTopOf="@id/audio_player_controls"
        app:layout_constraintEnd_toStartOf="@id/audio_player_total_time" />

    <TextView
        android:id="@+id/audio_player_total_time"
        android:layout_width="@dimen/audio_player_time_width"
        android:layout_height="@dimen/audioplayer_seekbar_height"
        android:gravity="center"
        android:textColor="@color/audio_player_total_time"
        android:textSize="@dimen/text_size_micro"
        app:layout_constraintStart_toEndOf="@id/player_progress"
        app:layout_constraintTop_toTopOf="@id/player_progress"
        app:layout_constraintBottom_toBottomOf="@id/player_progress"
        app:layout_constraintEnd_toEndOf="parent" />

    <include
        android:id="@+id/audio_player_controls"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        layout="@layout/audio_player_controls" />

</androidx.constraintlayout.widget.ConstraintLayout>